@model ServiceStation.Models.Car

@{
    ViewBag.Title = "CarDelete";
}

<h2>CarDelete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Owner
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceClient.FirstName) @Html.DisplayFor(model => model.ServiceClient.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Make)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Make)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Model)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Model)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VIN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VIN)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            @if (ViewBag.ErrMessage == null)
            {
                @ViewBag.ErrMessage
            }
            <p>@Html.ActionLink("Back to List", "Details", new { id = Model.ServiceClientID })</p>
        </div>
    }
</div>
